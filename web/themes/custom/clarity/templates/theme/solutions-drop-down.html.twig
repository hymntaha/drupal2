<div id="solutions-drop-down-menu">
    <div class="row">
        <div class="col-sm-12">
            <p class="main-link">{{ overview_link }}</p>
            {{ intro_text | raw }}
        </div>
    </div>
    <div class="row">
        {% for submenu in sub_menus %}
            <div class="col-sm-{% if loop.index == 2 %}6{% else %}3{% endif %}">
                <div class="solutions-sub-menu">
                    {% if submenu.title %}
                        <p class="h6">{{ submenu.title }}</p>
                    {% endif %}
                    <ul class="nav{% if loop.index == 2 %} columns-2{% endif %}">
                        {% for link in submenu.links %}
                            <li>{{ link }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
</div>